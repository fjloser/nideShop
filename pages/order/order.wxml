<!--pages/order/order.wxml-->
<view class="order-container">
  <view class="custom-mes">
    <view class="custom-info">
      <text class="custom-name">fj</text>
      <text class="custom-phone">889988888</text>
    </view>
    <view class="send-site">
      {{site}}
    </view>
  </view>
  <scroll-view class="order-box" scroll-y="true">
    <view class="order-list order-list{{index}}" wx:for="{{goods}}" wx:key="index">
      <view class="goods-shop">官方旗舰店</view>
      <view class="goods-box">
        <view class="goods-image">
          <image src="../../source/img/u=2479645721,1871304316&fm=26&gp=0.jpg" style="width: 100%; height: 100%"></image>
        </view>
        <view class="order-goods-box">
          <view class="goods-title">{{item.title}}</view>
          <view class="goods-size">{{item.size}}</view>
          <view class="goods-price">
            <view class="price">￥{{item.price}}</view>
            <view class="goods-num">×{{item.number}}</view>
          </view>
        </view>
      </view>
    </view>
  </scroll-view>
  <view class="pay-box">
    <view class="all-price">总计:<text>{{price}}</text></view>
    <view class="pay-btn">微信支付</view>
  </view>
</view>