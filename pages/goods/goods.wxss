/* pages/goods/goods.wxss */
checkbox .wx-checkbox-input {
  border-radius: 50%;
  width: 24rpx;
  height: 24rpx;
  background-color: #f5f5f5;
  border: 4rpx solid rgb(122, 122, 122)
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  border: 4rpx solid #f3333e;
  background: #f3333e;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  border-radius: 50%;
  width: 24rpx;
  /* 选中后对勾大小，不要超过背景的尺寸 */
  height: 24rpx;
  /* 选中后对勾大小，不要超过背景的尺寸 */
  line-height: 24rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 550;
  /* 对勾大小 30rpx */
  color: #fff;
  /* 对勾颜色 白色 */
  background: transparent;
  transform: translate(-50%, -50%);
  -webkit-transform: translate(-50%, -50%);
}

.goods-container{
  background: #eee;
}
.custom-site{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: white;
  border-bottom-right-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  font-size: 24rpx;
}
.custom-site .site text{
  font-size: 24rpx;
}
.right-btn-box{
  display: flex;
  justify-content: center;
  align-items: center;
  border-left: 1px solid rgba(0, 0, 0, .1);
}
.edit{
  margin: 0 30rpx;
}
.share-btn{
  display: flex;
  justify-content: center;
  align-items: center;
}
.share-btn > text{
  width: 6rpx;
  height: 6rpx;
  border-radius: 50%;
  background: gray;
  margin: 0 5rpx;
}
.share-btn > text:nth-child(2){
  width: 10rpx;
  height: 10rpx;
  background: black;
}
.goods-list{
  box-sizing: border-box;
  padding: 30rpx;
  border-radius: 20rpx;
  background: #fafafa;
  margin: 20rpx 0;
}
.goods-shop{
  font-size: 22rpx;
  font-weight: 550;
}
.goods-wrapper{
  display: flex;
  align-items: center;
}
.goods-mes-box{
  display: flex;
  flex: 1;
  align-items: center;
  margin-left: 20rpx;
}
.goods-image{
  width: 150rpx;
  height: 150rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
  padding: 10rpx;
  background: white;
}
.goods-title{
  font-size: 26rpx;
  margin-bottom: 10rpx;
}
.goods-size{
  width: 100%;
  font-size: 20rpx;
  color:gray;
  margin-bottom: 10rpx;
  white-space: normal;
}
.goods-price{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.goods-price .price{
  color: red;
  font-size: 28rpx;
  font-weight: 550;
}
.select-num{
  position: relative;
  width: 60rpx;
  /* height: 30rpx; */
  /* border: 1px solid; */
  background: rgba(0, 0, 0,.1);
  margin: 0 10rpx;
  color: black;
  font-size: 20rpx;
  text-align: center;
  z-index: 0;
}
.select-num input{
  height: 30rpx;
  min-height: 30rpx !important;
}
.goods-info-box{
  flex: 1;
}
.goods-price .goods-num{
  display: flex;
  align-items: center;
}
.goods-price .goods-num text{
  padding: 0 20rpx;
}
.pay-box{
  box-sizing: border-box;
  position: fixed;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100vw;
  bottom: 0;
  padding: 10rpx 30rpx;
  background: white;
  border-top: 1px solid rgba(0, 0, 0, .1);
  background: white;
}
.check-box{
  display: flex;
  justify-content: center;
  align-items: center;
}
.check-box text{
  font-size: 22rpx;
}
.all-price{
  font-size: 26rpx;
}
.all-price text:nth-child(2){
  font-size: 26rpx;
  font-weight: 550;
}
.pay-btn{
  padding: 15rpx 60rpx;
  background: red;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: white;
}
.remove-btn{
  padding: 10rpx 30rpx;
  border: 1px solid gray;
  border-radius: 30rpx;
  font-size: 22rpx;
  color: red;
}
.select-site-box{
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  /* width: 100vw; */
  height: 100vh;
  background: gray;
  border: 1px solid red;
}
.select-site-wrapper{
  box-sizing: border-box;
  position: absolute;
  bottom: 0;
  height: 500px;
  width: 100vw;
  padding: 30rpx 0 0 30rpx;
  border-top-left-radius: 25rpx;
  border-top-right-radius: 25rpx;
  background: white;
}
.select-site-wrapper .top-title{
  text-align: center;
  font-weight: 550;
  margin-bottom: 20rpx;
}
.select-site-wrapper .site-box{
  height: 80%;
}
.site-list{
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1px solid rgba(0, 0, 0,.1);
  font-size: 24rpx;
}
.site-box .site-list:nth-last-of-type(1){
  border-bottom: 0;
}
.site-box .select{
  margin-right: 20rpx;
}
.site-box .select radio .wx-radio-input{
  width: 25rpx;
  height: 25rpx;
  border-radius: 50%;
  }
.select-btn{
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  margin-bottom: 10rpx;
  bottom: 10rpx;
  padding: 20rpx;
  font-size: 26rpx;
  font-weight: 550;
  color: white;
  text-align: center;
  background: red;
  border-radius: 60rpx;
}
.close-btn{
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  width: 35rpx;
  height: 35rpx;
  background: rgba(0, 0, 0,.1);
  border-radius: 50%;
  text-align: center;
  line-height: 35rpx;
  font-size: 24rpx;
  color: gray;
}
.noGoods{
  width: 170rpx;
  padding: 20rpx;
  background-color: darkcyan;
  color: white;
  font-size: 26rpx;
  text-align: center;
  border-radius: 40rpx;
  margin: 0 auto;
  margin-top: 500rpx;
}
.noGoods-box{
  height: 90vh;
}