.goods-box {
  margin: 0 -10rpx;
  margin-top: 20rpx;
}

.goods-box:after {
  content: '';
  display: block;
  clear: both;
}

.goods-column {
  box-sizing: border-box;
  padding: 0 10rpx;
  float: left;
  width: 50%;
}

.goods-list {
  box-sizing: border-box;
  padding: 20rpx;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  /* text-align: center; */
}

/*imge*/
.goods-list .goods-mes text{
  font-size: 28rpx;
}
.goods-list .goods-price{
  margin: 20rpx 0;
  color: red;
  font-size: 32rpx;
}
.goods-list .goods-price > text{
  font-size: 24rpx;
}
.goods-list .goods-comment{
  display: flex;
  justify-content: space-between;
  margin: 20rpx 0;
  font-size: 20rpx;
  color: gray;
}